<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:background="@drawable/btn_select_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.jiandanbaoxian.widget.RoundImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_driving_insurance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追梦人"
                android:textColor="#505050"
                android:textSize="@dimen/middle_textsize" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_padding"
                android:layout_marginTop="@dimen/little_padding"
                android:text="团长"
                android:textColor="#c4c4c7"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_padding"
                android:text="团员"
                android:textColor="#c4c4c7"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计保费"
                android:textColor="#c4c4c7"
                android:textSize="@dimen/big_textsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_leader_tz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_padding"
                android:layout_marginTop="@dimen/little_padding"
                android:text="符睿睿"
                android:textColor="#393939"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:id="@+id/tv_leader_ty_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_padding"
                android:text="14人"
                android:textColor="#393939"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:id="@+id/tv_total_baofei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.18万"
                android:textColor="#393939"
                android:textSize="@dimen/big_textsize" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_i_want_to_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="我要加入"
                    android:textColor="#868686"
                    android:textSize="@dimen/middle_textsize" />

                <ImageView

                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/middle_padding"
        android:layout_marginLeft="@dimen/middle_padding"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/very_light_gray_color" />
</LinearLayout>