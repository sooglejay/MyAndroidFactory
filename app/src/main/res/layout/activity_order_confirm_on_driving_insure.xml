<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_screen"
        android:layout_height="20dp"/>
    <!--保障人-->
    <LinearLayout
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:text="被保障人："
            android:textColor="#4f4f4f"
            android:textSize="@dimen/big_textsize" />

        <EditText
            android:id="@+id/et_insure_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入被保障人姓名"
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            android:textColorHint="@color/tv_gray_color_level_1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_screen" />


    <!--保障人身份证号码-->
    <LinearLayout
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:text="身份证号："
            android:textColor="#4f4f4f"
            android:textSize="@dimen/big_textsize" />

        <EditText
            android:id="@+id/et_insure_user_id_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入身份证号码"
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            android:textColorHint="@color/tv_gray_color_level_1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_screen" />
    <!--保险期限-->
    <LinearLayout
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:padding="@dimen/middle_padding"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="保险期限："
            android:textColor="#4f4f4f"
            android:textSize="@dimen/big_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:text="2015.09.10-2015.09.11"
            android:textColor="#4f4f4f"
            android:textSize="@dimen/big_textsize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_screen" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_screen"
        android:orientation="vertical"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/middle_padding"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="订单内容："
                android:textSize="@dimen/big_textsize"  android:textColor="#4e4e4e"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/big_textsize"   android:textColor="#4e4e4e"
                android:text="驾驶员保险"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/big_textsize"    android:textColor="#4e4e4e"
                android:text="订单金额："
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/big_textsize"  android:textColor="#4e4e4e"
                android:text="100元"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginTop="@dimen/most_big_padding"
            android:gravity="center"
            android:background="@drawable/btn_select_base"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:text="去支付"
            android:textColor="@color/white_color"
            android:textSize="@dimen/tv_size_level_1" />
    </LinearLayout>
</LinearLayout>
