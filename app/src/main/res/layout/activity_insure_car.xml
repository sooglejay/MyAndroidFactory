            <ImageView
                android:id="@+id/iv_take_car_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_insure_car_describe" />

            <TextView
