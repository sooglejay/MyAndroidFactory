<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jsb.widget.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/gray_color"
            android:gravity="center"
            android:weightSum="1.0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_take_car_picture"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:src="@drawable/icon_choose_pic_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="请扫描行驶证正本\n信息将自动读取录入" />
        </LinearLayout>

        <com.rey.material.widget.EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="车主姓名："
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext" />

        <com.rey.material.widget.EditText
            android:id="@+id/et_car_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="车牌号码："
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext" />

        <com.rey.material.widget.EditText
            android:id="@+id/et_car_jia_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="车架号码："
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext" />


        <com.rey.material.widget.EditText
            android:id="@+id/et_car_fadongji_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="发动机号："
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext" />

        <com.rey.material.widget.EditText
            android:id="@+id/et_sign_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登记日期："
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/middle_padding">

            <com.rey.material.widget.EditText
                android:id="@+id/et_user_id_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="身份证号:(可扫描)："
                android:inputType="text"
                app:et_inputId="@+id/textfield_et_label_input"
                app:et_supportMode="none"
                app:v_styleId="@array/edittext" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/icon_choose_pic_small" />
        </FrameLayout>

        <com.rey.material.widget.EditText
            android:id="@+id/et_insure_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="起保日期："
            android:inputType="text"
            android:padding="@dimen/middle_padding"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext" />


        <com.rey.material.widget.Button
            android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@drawable/btn_select_gray"
            android:text="去精准报价"
            android:textSize="@dimen/huge_textsize"
            app:v_styleId="@array/button_flat" />
    </LinearLayout>
</ScrollView>
