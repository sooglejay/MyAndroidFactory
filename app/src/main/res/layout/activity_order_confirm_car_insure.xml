<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jiandanbaoxian.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="基本信息"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />
            <!--投保地区-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="投保地区"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

               <EditText
                    android:id="@+id/et_insure_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_select_white"
                    android:cursorVisible="false"
                    android:hint="请选择投保地区"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/middle_padding"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />
            <!--保险人姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="被保险人"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_insure_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入被保险人姓名"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <!--保险人电话号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="电话号码"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_insure_user_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/id_card"
                    android:hint="请输入被保险人电话号码"
                    android:inputType="text"

                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />
            <!--身份证号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="身份证号"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_user_idcard_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/id_card"
                    android:hint="请输入身份证号码"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="保单配送信息"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />
            <!--收件人名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"

                    android:text="收件人名"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />


                <EditText
                    android:id="@+id/et_receive_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入收件人姓名"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <!--收件人电话号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="收件电话"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_receive_user_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入收件人电话号码"
                    android:inputType="text"

                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <!--收件人地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="收件地址"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_company_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请定位或输入收件人地址"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/little_padding"
                    android:src="@drawable/icon_location" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="推荐人信息（选填）"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />
            <!--推荐人姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:text="推荐人"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_recommend_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入推荐人电话号码"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/very_light_gray_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单内容"
                        android:textColor="#4e4e4e"
                        android:textSize="@dimen/big_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/middle_padding"
                        android:text="车险"
                        android:textColor="#4e4e4e"
                        android:textSize="@dimen/big_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单金额"
                        android:textColor="#4e4e4e"
                        android:textSize="@dimen/big_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/middle_padding"
                        android:text="100元"
                        android:textColor="#4e4e4e"
                        android:textSize="@dimen/big_textsize" />
                </LinearLayout>
            </LinearLayout>


            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/bg_screen"-->
            <!--android:orientation="vertical"-->
            <!--android:paddingLeft="@dimen/middle_padding">-->


            <!--<TextView-->
            <!--android:id="@+id/tv_pay"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="@dimen/middle_padding"-->
            <!--android:layout_marginTop="@dimen/most_big_padding"-->
            <!--android:background="@drawable/btn_select_base"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="@dimen/middle_padding"-->
            <!--android:paddingTop="@dimen/middle_padding"-->
            <!--android:text="去支付"-->
            <!--android:textColor="@color/white_color"-->
            <!--android:textSize="@dimen/tv_size_level_1" />-->
            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_screen"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_choose"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_choose_selected" />

                <LinearLayout
                    android:id="@+id/layout_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_select_bg_screen"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/middle_padding"
                        android:paddingTop="@dimen/middle_padding"
                        android:text="同意"
                        android:textColor="#a7a7a7"
                        android:textSize="@dimen/big_textsize" />

                    <TextView
                        android:id="@+id/tv_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/middle_padding"
                        android:paddingRight="@dimen/middle_padding"
                        android:paddingTop="@dimen/middle_padding"
                        android:text="《服务协议》"
                        android:textColor="@color/base_color"
                        android:textSize="@dimen/big_textsize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_screen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_paying_agent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#c2dcca"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:text="找人代付"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/big_textsize" />

                    <TextView
                        android:id="@+id/tv_buy_insure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_select_base_shape_0"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:text="去支付"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/big_textsize" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
