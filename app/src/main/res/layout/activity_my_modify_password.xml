<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="手机验证"
        android:textColor="@color/tv_gray_color_level_3"
        android:textSize="@dimen/small_textsize" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/line_e0_e5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="手机号码:"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="验 证 码:"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_verification_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:inputType="phone"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

        <TextView
            android:id="@+id/tv_obtain_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/little_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginTop="@dimen/little_padding"
            android:background="@drawable/btn_select_base"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:text="获取验证码"
            android:textColor="@color/white_color"
            android:textSize="@dimen/tv_size_level_0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_e5_e0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="密码重置"
        android:textColor="@color/tv_gray_color_level_3"
        android:textSize="@dimen/small_textsize" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_e0_e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="新密码:"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@null"
            android:hint="请输入6位数字新密码"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="phone"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="确认密码:"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_re_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@null"
            android:hint="请再次输入6位数字新密码"
            android:maxLength="6"
            android:inputType="phone"
            android:maxLines="1"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f6"
        android:layout_height="match_parent">
        <TextView
            android:text="确定"
            android:id="@+id/tv_confirm"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="@dimen/most_big_padding"
            android:layout_marginRight="@dimen/most_big_padding"
            android:background="@drawable/btn_select_base"
            android:textColor="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
</LinearLayout>
