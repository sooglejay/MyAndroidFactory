<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jsb.widget.TitleBar
        android:layout_width="match_parent"
        android:id="@+id/title_bar"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="公司信息"
        android:textColor="@color/tv_gray_color_level_3"
        android:textSize="@dimen/small_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_e0_e5" />

    <!-- 公司名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/icon_cannot_empty"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_width="8dp"
            android:layout_gravity="center_vertical"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="公司名称"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@null"
            android:hint="请输入公司名称"
            android:inputType="text"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />

    <!--公司地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="公司地址"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请定位公司地址"
            android:inputType="text"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/little_padding"
            android:src="@drawable/icon_location" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_e5_e0" />


    <!-- 执照编号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/icon_cannot_empty"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_width="8dp"
            android:layout_gravity="center_vertical"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="执照编号"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_zhizhaobianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:inputType="text"
            android:background="@null"
            android:hint="请输入执照编号"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />


    <!-- 代理品牌 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="代理品牌"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <TextView
            android:background="@drawable/btn_select_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="未选择"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow_right"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />


    <!-- 服务经理 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/icon_cannot_empty"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_width="8dp"
            android:layout_gravity="center_vertical"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="服务经理"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:inputType="text"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />


    <!-- 服务热线 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/icon_cannot_empty"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_width="8dp"
            android:layout_gravity="center_vertical"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="服务热线"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_manage_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@null"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />


    <!--服务介绍-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/small_padding"
        android:text="服务介绍"
        android:textColor="@color/tv_gray_color_level_3"
        android:textSize="@dimen/small_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white_color"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_cannot_empty"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_width="8dp"
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_gravity="center_vertical|top"
            android:layout_height="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:hint="请输入30字以内服务介绍"
            android:textColorHint="#d1d1d2"
            android:textSize="@dimen/tv_size_level_1"
            android:background="@null"
            android:paddingLeft="20dp"
            android:minHeight="48dp"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />
    <!--上传证照-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/small_padding"
        android:text="上传证照"
        android:textColor="@color/tv_gray_color_level_3"
        android:textSize="@dimen/small_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white_color"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_cannot_empty"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_width="8dp"
            android:layout_gravity="center|top"
            android:layout_height="8dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/icon_certification"
                android:layout_margin="@dimen/middle_padding"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:layout_height="70dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="营业执照"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </FrameLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen" />
</LinearLayout>