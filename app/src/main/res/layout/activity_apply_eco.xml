<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiandanbaoxian.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="公司信息"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <!-- 公司名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:src="@drawable/icon_cannot_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:text="公司名称"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:background="@null"
                    android:hint="请输入公司名称"
                    android:inputType="text"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <!--公司地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:gravity="center"
                    android:text="公司地址"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_company_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请定位公司地址"
                    android:inputType="text"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/little_padding"
                    android:src="@drawable/icon_location" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />


            <!-- 执照编号 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:src="@drawable/icon_cannot_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:text="执照编号"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_zhizhaobianhao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:background="@null"
                    android:digits="@string/id_card"
                    android:hint="请输入执照编号"
                    android:inputType="text"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />


            <!-- 代理品牌 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:text="代理品牌"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/btn_select_white"
                    android:gravity="center"
                    android:text="未选择" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />


            <!-- 服务经理 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:src="@drawable/icon_cannot_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:text="服务经理"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_manage_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />


            <!-- 服务热线 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:src="@drawable/icon_cannot_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:text="服务热线"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_manage_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:background="@null"
                    android:digits="@string/phone_number"
                    android:hint="请输入电话号码"
                    android:inputType="numberSigned"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />


            <!--服务介绍-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="20dp"
                android:paddingTop="@dimen/small_padding"
                android:text="服务介绍"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:src="@drawable/icon_cannot_empty" />

                <EditText
                    android:id="@+id/et_server_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入30字以内服务介绍"
                    android:minHeight="48dp"
                    android:paddingBottom="@dimen/middle_padding"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/middle_padding"
                    android:paddingTop="@dimen/middle_padding"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </FrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />
            <!--上传证照-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="20dp"
                android:paddingTop="@dimen/small_padding"
                android:text="上传证照"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:src="@drawable/icon_cannot_empty" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/middle_padding">

                    <ImageView
                        android:id="@+id/iv_card"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/middle_padding"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_certification" />

                    <TextView
                        android:id="@+id/tv_ball_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="营业执照"
                        android:textSize="8sp" />
                </FrameLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_screen" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>