<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:padding="@dimen/middle_padding"
        android:text="需支付的各险种总费用"
        android:textColor="@color/base_color"
        android:textSize="@dimen/small_textsize" />

    <LinearLayout
        android:id="@+id/layout_compulsory_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select_white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:text="交强险"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/big_textsize" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_compulsory_total_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:text="2000.0元"
            android:textColor="#0b0b0b" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select_white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:text="车船税"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/big_textsize" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_tax_total_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:text="2000.0元"
            android:textColor="#0b0b0b" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_commercial_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select_white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:text="商业险"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/big_textsize" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_commercial_total_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:text="2000.0元"
            android:textColor="#0b0b0b" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f6"
        android:padding="@dimen/middle_padding"
        android:text="商业险详情"
        android:textColor="@color/base_color"
        android:textSize="@dimen/small_textsize" />
</LinearLayout>