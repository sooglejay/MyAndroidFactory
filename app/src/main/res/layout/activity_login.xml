<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jsb.widget.TitleBar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray_color_level_0"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="手机验证"
        android:textColor="@color/tv_gray_color_level_3"
        android:textSize="@dimen/small_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="手机号码:"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColorHint="@color/tv_gray_color_level_1"
            android:textSize="@dimen/tv_size_level_1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:text="验 证 码:"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/tv_size_level_1" />

        <EditText
            android:id="@+id/et_verification_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textColorHint="@color/tv_gray_color_level_1"
            android:textSize="@dimen/tv_size_level_1" />

        <TextView
            android:id="@+id/tv_obtain_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/little_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginTop="@dimen/little_padding"
            android:background="@drawable/btn_select_base"
            android:gravity="center"
            android:paddingLeft="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:text="获取验证码"
            android:textColor="@color/white_color"
            android:textSize="@dimen/tv_size_level_0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginTop="@dimen/most_big_padding"
            android:background="@drawable/btn_select_base"
            android:gravity="center"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:text="登录"
            android:textColor="@color/white_color"
            android:textSize="@dimen/tv_size_level_1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen" />

</LinearLayout>
