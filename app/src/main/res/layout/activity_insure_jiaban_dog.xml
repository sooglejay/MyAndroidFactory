<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipChildren="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.jiandanbaoxian.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_take_car_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_insure_jiaban_dog_describe" />


    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen"
        android:padding="@dimen/middle_padding"
        android:text="本期商品数还剩7份"
        android:textColor="#8e8e8e"
        android:textSize="@dimen/middle_textsize" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/very_light_gray_color" />-->

    <LinearLayout
        android:id="@+id/layout_coverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select_white"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:paddingBottom="@dimen/middle_padding"
            android:paddingLeft="@dimen/middle_padding"
            android:paddingTop="@dimen/middle_padding"
            android:text="加班就赚"
            android:textColor="@color/tv_black_color_level_0"
            android:textSize="@dimen/big_textsize" />

        <TextView
            android:id="@+id/tv_coverage"
            android:paddingBottom="@dimen/middle_padding"
            android:textColor="@color/tv_black_color_level_0"
            android:paddingTop="@dimen/middle_padding"
            android:textSize="@dimen/big_textsize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/middle_padding"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/very_light_gray_color" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/middle_padding">

        <TextView
            android:id="@+id/tv_time_shengxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#585858"
            android:textSize="@dimen/big_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/middle_padding"
        android:paddingLeft="@dimen/middle_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保障时间："
            android:textColor="#585858"
            android:textSize="@dimen/big_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7天"
            android:textColor="#585858"
            android:textSize="@dimen/big_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_choose_selected" />

        <LinearLayout
            android:id="@+id/layout_rule"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_select_bg_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/middle_padding"
                android:paddingTop="@dimen/middle_padding"
                android:text="同意"
                android:textColor="#a7a7a7"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:id="@+id/tv_licence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/middle_padding"
                android:paddingRight="@dimen/middle_padding"
                android:paddingTop="@dimen/middle_padding"
                android:text="《服务协议》"
                android:textColor="@color/base_color"
                android:textSize="@dimen/big_textsize" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_screen"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#c2dcca"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="1元/月"
                android:textColor="@color/white_color"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:id="@+id/tv_buy_insure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_select_base_shape_0"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="我要购买"
                android:textColor="@color/white_color"
                android:textSize="@dimen/big_textsize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
