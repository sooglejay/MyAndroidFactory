<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/qrcode"
        android:layout_marginTop="@dimen/middle_padding"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/big_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/scan_code_make_money" />
    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_marginTop="@dimen/big_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical"
        android:textSize="@dimen/middle_textsize"
        android:gravity="left"

        android:text="@string/share_qrcode" />

        <ImageView
            android:layout_width="fill_parent"
            android:src="@drawable/share_2"
            android:scaleType="fitXY"
            android:layout_height="wrap_content" />
</LinearLayout>