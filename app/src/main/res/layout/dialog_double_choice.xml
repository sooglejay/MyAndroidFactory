<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minWidth="200dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/middle_padding"
        android:gravity="center"
        android:textColor="@color/tv_black_color_level_1"
        android:textIsSelectable="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/middle_padding"
        android:layout_marginRight="@dimen/middle_padding"
        android:layout_marginTop="@dimen/little_padding"
        android:layout_marginBottom="@dimen/middle_padding"
        android:gravity="center"
        android:textColor="@color/tv_black_color_level_1"
        android:textIsSelectable="true"
        android:textSize="@dimen/big_textsize" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_4_white_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel_select"
            android:gravity="center"
            android:text="取消"
            android:textColor="#3aa2ff"
            android:textSize="@dimen/big_textsize" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_color" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_confirm_select"
            android:gravity="center"
            android:text="确定"
            android:textColor="#3aa2ff"
            android:textSize="@dimen/big_textsize" />
    </LinearLayout>
</LinearLayout>
