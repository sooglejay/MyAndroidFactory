<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/bg_screen"
        android:orientation="vertical">

         <com.jiandanbaoxian.widget.swipemenulistview.SwipeMenuListView
            android:id="@+id/card_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/very_light_gray_color"
            android:dividerHeight="@dimen/listview_divider"
            android:scrollbars="none"></com.jiandanbaoxian.widget.swipemenulistview.SwipeMenuListView>
    </LinearLayout>

    <com.jiandanbaoxian.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jiandanbaoxian.widget.TitleBar>

</FrameLayout>
