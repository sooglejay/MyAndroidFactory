<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jiandanbaoxian.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jiandanbaoxian.widget.TitleBar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/middle_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="转出领取到银行卡"
        android:textColor="@color/tv_gray_color_level_3" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/very_light_gray_color" />
<LinearLayout
    android:orientation="vertical"
    android:background="@color/bg_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiandanbaoxian.widget.swipemenulistview.SwipeMenuListView
        android:id="@+id/card_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/very_light_gray_color"
        android:dividerHeight="@dimen/listview_divider"
        android:scrollbars="none"></com.jiandanbaoxian.widget.swipemenulistview.SwipeMenuListView>
</LinearLayout>

</LinearLayout>
