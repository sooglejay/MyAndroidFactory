<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white_color"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.rey.material.widget.Button
                android:id="@+id/my_insure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_insure"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color">

            </View>
            <com.rey.material.widget.Button
                android:id="@+id/my_history_sale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_history_sale"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color">

            </View>
            <com.rey.material.widget.Button
                android:id="@+id/my_call_plice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_call_plice"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.rey.material.widget.Button
                android:id="@+id/my_money_packet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_money_packet"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <com.rey.material.widget.Button
                android:id="@+id/my_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_share"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <com.rey.material.widget.Button
                android:id="@+id/my_modify_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_modify_password"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.rey.material.widget.Button
                android:id="@+id/my_clear_cache"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_clear_cache"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <com.rey.material.widget.Button
                android:id="@+id/my_logout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/huge_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_logout"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <com.rey.material.widget.Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/huge_textsize"
                android:background="@null"
                app:v_styleId="@array/button_flat"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/gray_color"></View>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"></View>

    </LinearLayout>
</LinearLayout>
