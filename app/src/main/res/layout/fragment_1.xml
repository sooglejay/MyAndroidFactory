<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white_color"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<TextView-->
        <!--android:id="@+id/carNumberTv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="left|center"-->
        <!--android:background="@drawable/btn_select_gray"-->
        <!--android:padding="@dimen/middle_padding"-->
        <!--android:text="川A8888"-->
        <!--android:textColor="@color/dark_black_color"-->
        <!--android:textSize="@dimen/big_textsize" />-->

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/car_number_spinner"
        android:layout_height="wrap_content"/>
    <com.jsb.widget.BannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_padding"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日可节省保费"
                android:textSize="@dimen/middle_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="$8,00"
                android:textSize="@dimen/most_big_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginTop="2dp"
            android:background="@color/light_gray_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额"
                android:textSize="@dimen/middle_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="$276,00"
                android:textSize="@dimen/most_big_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pull_money"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="0.3"
            android:background="@drawable/btn_select_base"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/white_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/middle_padding"
        android:background="@color/light_gray_color" />

    <TextView
        android:id="@+id/layout_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:background="@drawable/btn_select_white"
        android:padding="@dimen/middle_padding"
        android:text="查看《停保规则》"
        android:textColor="@color/light_red"
        android:textSize="@dimen/middle_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="限行停保"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/more_big_textsize" />

            <!--<TextView-->
                <!--android:id="@+id/tv_choose_week"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="left|center"-->
                <!--android:background="@drawable/btn_select_gray"-->
                <!--android:paddingBottom="@dimen/middle_padding"-->
                <!--android:paddingRight="28dp"-->
                <!--android:paddingTop="@dimen/middle_padding"-->
                <!--android:text="每周三"-->
                <!--android:textColor="@color/dark_black_color"-->
                <!--android:textSize="12sp" />-->

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/week_number_spinner"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/week_switch_tab_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/most_big_padding"
            android:checked="true"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginLeft="24dp"
        android:text="预约停保"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/more_big_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="@dimen/middle_padding"
            android:background="@drawable/btn_select_gray"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/middle_padding"
            android:paddingRight="@dimen/middle_padding"
            android:paddingTop="@dimen/small_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15-10-10" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15-10-12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/middle_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00开始" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24:00结束" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date_interval"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/middle_padding"
                android:gravity="center_horizontal|bottom"
                android:text="三天" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/date_switch_tab_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/most_big_padding"
            android:checked="true"/>
    </LinearLayout>


</LinearLayout>


