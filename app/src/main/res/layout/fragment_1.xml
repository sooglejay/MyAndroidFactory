<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white_color"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/car_number_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <com.jsb.widget.DecoView.decoviewlib.DecoView
                    android:id="@+id/dynamicArcView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/small_padding"
                        android:text="累计节省保费"
                        android:textColor="@color/tv_black_color_level_1"
                        android:textSize="@dimen/middle_textsize" />

                    <TextView
                        android:id="@+id/tv_follow_decoView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_black_color_level_1"
                        android:textSize="20sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="22dp"
                android:background="#ababab" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middle_padding"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日可节省保费"
                        android:textSize="@dimen/middle_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$8,00"
                        android:textSize="@dimen/most_big_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginRight="@dimen/middle_padding"
                    android:layout_marginTop="2dp"
                    android:background="#bfbfbf" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可提现金额"
                        android:textSize="@dimen/middle_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$276,00"
                        android:textSize="@dimen/most_big_textsize" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pull_money"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bt_height"
                    android:layout_weight="0.3"
                    android:background="@drawable/btn_select_base"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/white_color" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/middle_padding"
                android:background="#bfbfbf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="#f5f5f6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:text="限行停保"
                        android:textColor="@color/dark_gray_color"
                        android:textSize="@dimen/more_big_textsize" />

                    <Spinner
                        android:id="@+id/week_number_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.jsb.widget.CustomSwitch.SwitchButton
                    android:id="@+id/week_switch_tab_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:kswOffColor="@color/very_light_gray_color"
                    app:kswOnColor="@color/base_color"
                    android:layout_marginRight="@dimen/most_big_padding"
                    android:checked="true" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="24dp"
                android:text="预约停保"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/more_big_textsize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="@dimen/middle_padding"
                    android:background="@drawable/btn_select_gray"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/middle_padding"
                    android:paddingRight="@dimen/middle_padding"
                    android:paddingTop="@dimen/small_padding">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15-10-10" />

                        <TextView
                            android:id="@+id/tv_end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15-10-12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/middle_padding"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00开始" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24:00结束" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_date_interval"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_padding"
                        android:gravity="center_horizontal|bottom"
                        android:text="三天" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.jsb.widget.CustomSwitch.SwitchButton
                    android:id="@+id/date_switch_tab_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:kswOffColor="@color/very_light_gray_color"
                    app:kswOnColor="@color/base_color"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/most_big_padding"
                    android:checked="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


