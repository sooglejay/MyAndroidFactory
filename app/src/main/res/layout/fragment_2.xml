<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.jsb.widget.TitleBar>

    <com.jsb.widget.BannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <TextView
                android:id="@+id/tv_insure_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/big_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/car_insure"
                android:background="@drawable/btn_select_white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <TextView
                android:id="@+id/tv_insure_jiaban"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/big_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/jiaban_insure"
                android:background="@drawable/btn_select_white"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>

            <TextView
                android:id="@+id/tv_insure_driving"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/big_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/driving_insure"
                android:background="@drawable/btn_select_white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
            <TextView
                android:id="@+id/tv_insure_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/big_textsize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/line_insure"
                android:background="@drawable/btn_select_white"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray_color"></View>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray_color"></View>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:background="@color/bg_screen"
            android:layout_weight="0.25"
            android:layout_height="0dp"/>
    </LinearLayout>

</LinearLayout>

