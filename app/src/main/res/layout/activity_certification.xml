<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.jsb.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jsb.widget.TitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_id_card"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_id_card" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="个人信息"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e0_e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:drawableLeft="@drawable/icon_cannot_empty"
                    android:text="真实姓名:"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d2d2d2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:drawableLeft="@drawable/icon_cannot_empty"
                    android:text="身份证号:"
                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_id_card_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e5_e0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="其他信息"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e5_e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:drawableLeft="@drawable/icon_cannot_empty"
                    android:text="所在城市:"

                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <LinearLayout
                    android:id="@+id/layout_choose_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:background="@drawable/btn_select_white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="成都市" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="@dimen/middle_padding"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e5_e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:text="所属公司:"

                    android:textColor="@color/tv_black_color_level_0"
                    android:textSize="@dimen/tv_size_level_1" />

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/middle_padding"
                    android:layout_marginLeft="@dimen/middle_padding"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入公司名称"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColorHint="#d1d1d2"
                    android:textSize="@dimen/tv_size_level_1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e5_e0" />

            <!--公司地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="公司地址:"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/big_textsize" />

                <EditText
                    android:id="@+id/et_company_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请定位公司地址"
                    android:inputType="text"
                    android:padding="@dimen/middle_padding"
                    android:textColorHint="@color/tv_gray_color_level_1"
                    android:textSize="@dimen/tv_size_level_1" />

                <ImageView
                    android:id="@+id/iv_location_companny_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/little_padding"
                    android:paddingRight="@dimen/little_padding"
                    android:src="@drawable/icon_location" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e5_e0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="服务介绍"
                android:textColor="@color/tv_gray_color_level_3"
                android:textSize="@dimen/small_textsize" />

            <EditText
                android:id="@+id/et_server_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top|left"
                android:hint="请输入30字以内的服务介绍"
                android:inputType="text"
                android:maxLines="6"
                android:minHeight="60dp"
                android:paddingLeft="@dimen/middle_padding"
                android:paddingRight="@dimen/middle_padding"
                android:singleLine="false"
                android:textColorHint="#d1d1d2"
                android:textSize="@dimen/tv_size_level_1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_e5_e0" />


            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/more_big_padding"
                android:background="@drawable/btn_select_base"
                android:gravity="center"
                android:paddingBottom="@dimen/middle_padding"
                android:paddingTop="@dimen/middle_padding"
                android:text="提交"
                android:textColor="@color/white_color"
                android:textSize="@dimen/tv_size_level_1" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>